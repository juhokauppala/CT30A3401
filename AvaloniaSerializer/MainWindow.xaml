<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaSerializer.MainWindow"
        Title="Data">
  <Grid Name="MainGrid" ColumnDefinitions="Auto,Auto,Auto,Auto" RowDefinitions="Auto" Background="DarkRed" >
    <TextBlock Text="Serialization time (ms)" Grid.Column="1" Grid.Row="0" FontFamily="verdana" Foreground="Bisque"/>
    <TextBlock Text="Deserialization time (ms)" Grid.Column="2" Grid.Row="0" FontFamily="verdana" Foreground="Bisque"/>
    <TextBlock Text="Serialized size (B)" Grid.Column="3" Grid.Row="0" FontFamily="verdana" Foreground="Bisque"/>
  </Grid>
</UserControl>
